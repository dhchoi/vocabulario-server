<div class="col-sm-8 col-sm-offset-2">
    <form method="post">
        <legend>Reset Password</legend>
        <input type="hidden" name="_csrf" value="{{_csrf}}">
        <div class="form-group">
            <label for="password">New Password</label>
            <input class="form-control" type="password" name="password" value="" placeholder="New Password" autofocus>
        </div>
        <div class="form-group">
            <label for="confirm">Confirm Password</label>
            <input class="form-control" type="password" name="confirm" value="" placeholder="Confirm Password">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-reset" type="submit">
                <i class="fa fa-keyboard-o"></i>
                Change Password
            </button>
        </div>
    </form>
</div>