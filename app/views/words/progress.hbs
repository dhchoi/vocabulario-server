{{#extend "styles"}}
{{{css "progress-main"}}}
{{/extend}}

{{#if word}}
<h1>{{word.word}}</h1>
<div class="clearfix"></div>
<hr>
<div class="row">
    <h2>Confidence Rate</h2>
    <div class="col-md-12">
        <div class="legend"></div>
        <canvas class="chart"></canvas>
    </div>
</div>
<hr>
<div class="row">
    <h2>Statistics</h2>
    <div class="col-md-6">
        <h3>Learning Rate for This Word</h3>
        <ul>
          <li><strong>You:</strong> Just Started / Good / Average / Bad</li>
          <li><strong>Others:</strong> Just Started / Good / Average / Bad</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Time Taken to Memorize</h3>
        <ul>
          <li><strong>You:</strong> n days (and continuing)</li>
          <li><strong>Others:</strong> n days (minimum)</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Popularity</h3>
        <ul>
            <li><strong>Number of People:</strong> ~ n people</li>
            <li><strong>Percentage:</strong> n %</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Where This Word Appeared The Most</h3>
        <ul>
            <li>Foo bar biz baz. <a href="">[link]</a></li>
            <li>Goo gar giz gaz. <a href="">[link]</a></li>
            <li>Zoo zar ziz zaz. <a href="">[link]</a></li>
        </ul>
    </div>
</div>
<hr>
<div class="row">
    <h2>Set Reminders for This Word</h2>
    <div class="col-md-6">
        <div class="radio">
            <label>
                <input type="radio" name="reminder-options" value="none" checked>None
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="reminder-options" value="daily">Daily
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="reminder-options" value="weekly">Weekly
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="reminder-options" value="monthly">Monthly
            </label>
        </div>
    </div>
</div>
{{else}}
<h1>Non-existing word!</h1>
<hr>
<p class="lead">It seems that you haven't added that word yet.</p>
{{/if}}

{{#extend "scripts"}}
{{#if word}}
<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
<script>
window.ratingsData = {{{json word.ratings}}};
</script>
{{{js "bower_components/Chart.js/Chart.min"}}}
{{{js "progress-main"}}}
{{/if}}
{{/extend}}